<script type="text/javascript">
    var container = $('#treeview-1');
    var data = [
        {
            value: 1,
            text: 'A value',
            children: [
                {
                    value: 3,
                    text: 'Child'
                },
                {
                    value: 4,
                    text: 'Child with children',
                    children: [
                        {
                            value: 8,
                            text: 'Quux'
                        }
                    ]
                },
                {
                    value: 5,
                    text: 'Foo'
                }
            ]
        },
        {
            value: 2,
            text: 'Another please',
            children: [
                {
                    value: 6,
                    text: 'Bar'
                },
                {
                    value: 7,
                    text: 'Baz'
                }
            ]
        }
    ];

    var root = $('<ul>');
    container.append(root);

    function HandleSelection(e) {
        var checked = $(e.target).is(':checked');
        var node = $(e.target).closest('li');

        node.find('input:checkbox').prop('checked', checked);

        if (checked) {
            node.parents('li').children('input:checkbox').prop('checked', function () {
                return $(this).closest('li').find('input:checkbox').not(this).not(':checked').length == 0;
            });
        }
        else {
            node.parents('li').children('input:checkbox').prop('checked', false);
        }
    }

    function CreateNode(list, nodeData) {
        var nodeId = Math.random().toString().replace('.', '');
        var node = $('<li>');
        var checkbox = $('<input>', { type: 'checkbox', value: nodeData.value, id: nodeId });
        checkbox.change(HandleSelection);
        node.append(checkbox);
        node.append($('<label>', { for: nodeId }).text(nodeData.text));
        node.data('node-data', nodeData);
        list.append(node);

        if (nodeData.children) {
            var childList = $('<ul>');
            node.append(childList);
            $.each(nodeData.children, function (_, nodeData) {
                CreateNode(childList, nodeData);
            });
        }
    }

    $.each(data, function (_, nodeData) {
        CreateNode(root, nodeData);
    });
</script>